<p id="notice"><%= notice %></p>

<h1 class="red">Packages</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Version</th>
      <th>Code</th>
      <th>File</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @packages.each do |package| %>
      <tr>
        <td><%= package.name %></td>
        <td><%= package.version %></td>
        <td><%= package.code %></td>
        <td><%= package.file.filename %></td>
        <td><%= link_to 'Show', package %></td>
        <td><%= link_to 'Edit', edit_package_path(package) %></td>
        <td><%= link_to 'Destroy', package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Package', new_package_path, class: "yellow" %>
